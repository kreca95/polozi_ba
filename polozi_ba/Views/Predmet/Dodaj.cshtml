@model polozi_ba.Models.Predmet.DodajPredmetModel
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodaj predmet</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Predmet" asp-action="Dodaj" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Naziv"></label>
                <input asp-for="Naziv" />

            </div>
            <button type="submit">Dodaj</button>
        </form>
    </div>
</div>