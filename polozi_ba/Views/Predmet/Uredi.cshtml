@model polozi_ba.Data.Models.Predmet
@{
    ViewData["Title"] = "Uredi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Uredi predmet: @Model.Naziv</h2>

<form asp-controller="Predmet" asp-action="Uredi" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <input asp-for="Naziv" />

        <input type="hidden" asp-for="@Model.Id"/>
    </div>
    <button type="submit">Potvrdi promjene</button>
</form>